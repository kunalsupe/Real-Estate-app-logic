<div id="admin_wrapper">
	<h1>Sign-up</h1>
	
	<div class="attention">Sign up or <%= link_to "Sign in through Social N/W sites ", authentications_path %></div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<label><%= f.label :name %> </label>
<div class="text large required" id="username">  <%= f.text_field :name %> </div>
     
<label><%= f.label :email %></label> 
<div class="text large required" id="username">   <%= f.text_field :email %> </div> 

  <label><%= f.label :password %></label> 
<div  class="text large required" id="password">  <%= f.password_field :password %> </div> 

<label><%= f.label :password_confirmation %></label> 
<div  class="text large required" id="password">  <%= f.password_field :password_confirmation %>  </div> 


 <div class="button">  <div id="button"> <%= f.submit "Sign up" %></div> </div> 
<% end %>

<%= render :partial => "devise/shared/links" %>
