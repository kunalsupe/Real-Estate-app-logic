

<h1>Editing Property</h1>

<%= form_for(@property) do |f| %>
  <% if @property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
      <% @property.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
     
	
  <%= select("property", "cat_id", Category.find(:all,:order => "title asc").collect {|c| [ c.title, c.id ] }, {:prompt => 'Select'}) %>  
  

<p><label>    <%= f.label :title %> </label>
<div class="input large"> <%= f.text_field :title %> </div>

<p><label>    <%= f.label :address %> </label>
<div class="input large"> <%= f.text_field :address %> </div>

<p><label>    <%= f.label :city %> </label>
<div class="input large"> <%= f.text_field :city %> </div>  

<p><label>    <%= f.label :state %> </label>
<div class="input large"> <%= f.text_field :state %> </div>

<p><label>    <%= f.label :country %> </label></p>
<%= select("property", "country", Country.find(:all,:order => "name asc").collect {|c| [ c.name, c.name ] }, {:prompt => 'Select'}) %>

<p><label>    <%= f.label :price %> </label>
<div class="input large"> <%= f.text_field :price %> </div>     

    <p><%= f.label :sold %>    
   <b>Yes</b> <%= radio_button("property","sold","1") %> <b>NO</b>        
       <%= radio_button("property","sold","0") %>                                                               
  
	 <% if current_user.admin? %> 

	<p><%= f.label :featured %> 
	<b>Yes</b> <%= radio_button("property","featured","1") %> <b>NO</b>        
	      <%= radio_button("property","featured","0") %> 

	<% end %>



<p><label>    <%= f.label :description %></label>   
<div class="input large">      <%= f.text_area :description %></div>
  
<div class="button">  <div id="button"> 
    <%= f.submit %>
  </div>      </div>
<% end %>  

